# Copy to .env and export before running scripts or Jenkins
AWS_REGION=ap-south-1
ENVIRONMENT=dev
NAME_PREFIX=platform
ROOT_DOMAIN=rdhcloudlab.com
POC_SUBDOMAIN=poc
PARENT_HOSTED_ZONE_ID=
CREATE_POC_HOSTED_ZONE=true
ENABLE_ECR=false
ECR_REPOSITORY_NAMES="shared-app,shared-api"
ENABLE_CERT_MANAGER=true
ENABLE_EXTERNAL_DNS=true
ENABLE_METRICS_SERVER=true
# Node group sizing (overrides tfvars if exported). Supports multiple types in one list.
NODE_INSTANCE_TYPES='["t3.xlarge"]'
NODE_MIN_SIZE=1
NODE_DESIRED_SIZE=1
NODE_MAX_SIZE=2
# Remote state (used by Jenkins and Makefile when exported)
TF_STATE_BUCKET=rdhcloudlab-platform-tfstate
TF_LOCK_TABLE=rdhcloudlab-platform-tflock
# Optional assume-role for Jenkins or local use
AWS_ROLE_ARN=
AWS_PROFILE=
